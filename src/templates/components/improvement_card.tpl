<div class="improvement-card {{cardState.state}} child col-4">
    <div class="improvement-card__content">
        <span class="icon icon-i-lightbulb"></span>
        <div>
            <h2 class="improvement-card__content__title">Do you offer money back guarantee?</h2>
            <p class="improvement-card__content__description">➥ Falloff — level 2</p>
        </div>
    </div>
    <div class="improvement-card__bottom">
        <ul class="improvement-card__bottom-controlls">
            <li class="improvement-card__bottom-controlls__item">
                <a class="improvement-card__bottom-controlls__item-single" href="">
                    <span class="icon icon-i-comment-smile"></span>
                    <span>58%</span>
                </a>
            </li>
            <li class="improvement-card__bottom-controlls__item">
                <a class="improvement-card__bottom-controlls__item-single upvote" href="">
                    <span class="icon icon-i-thumbs-up"></span>
                    <span>14</span>
                </a>
            </li>
            <li class="improvement-card__bottom-controlls__item">
                <a class="improvement-card__bottom-controlls__item-single downvote" href="">
                    <span class="icon icon-i-thumbs-down"></span>
                    <span>14</span>
                </a>
            </li>
            <li class="improvement-card__bottom-controlls__item">
                <a class="improvement-card__bottom-controlls__item-single" href="">
                    <span class="icon icon-i-expand"></span>
                </a>
            </li>
        </ul>
    </div>
</div>
